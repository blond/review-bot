{

  "review-step-load": {
    "path": "./src/services/review/steps/load",
    "#plugin:review": {
      "stepsOptions": {
        "load": { "max": 5 }
      }
    },
    "dependencies": [
      "pull-request-model"
    ]
  },

  "review-step-remove-author": {
    "path": "./src/services/review/steps/remove_author"
  },

  "review-step-remove-already-reviewers": {
    "path": "./src/services/review/steps/remove_already_reviewers"
  },

  "review-step-ignore": {
    "path": "./src/services/review/steps/ignore"
  },

  "review-step-commiters": {
    "path": "./src/services/review/steps/commiters",
    "#plugin:review": {
      "stepsOptions": {
        "commiters": {
          "max": 4,
          "since": [4, "month"],
          "filesToCheck": 5,
          "commitsCount": 10
        }
      }
    },
    "dependencies": [
      "logger",
      "github"
    ]
  },

  "review-step-random": {
    "path": "./src/services/review/steps/random",
    "#plugin:review": {
      "stepsOptions": {
        "random": { "max": 5 }
      }
    }
  },

  "review-step-prefered": {
    "path": "./src/services/review/steps/prefered",
    "dependencies": [
      "logger",
      "team-manager"
    ]
  }

}
