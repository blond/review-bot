{

  "review-step-preferred": {
    "path": "./src/services/review/step-preferred",
    "#plugin:review": {
      "steps": ["review-step-preferred"]
    },
    "dependencies": [
      "logger",
      "team-manager"
    ]
  },

  "review-step-remove-author": {
    "path": "./src/services/review/step-remove-author",
    "#plugin:review": {
      "steps": ["review-step-remove-author"]
    }
  },

  "review-step-remove-reviewers": {
    "path": "./src/services/review/step-remove-reviewers",
    "#plugin:review": {
      "steps": ["review-step-remove-reviewers"]
    }
  },

  "review-step-ignore": {
    "path": "./src/services/review/step-ignore",
    "#plugin:review": {
      "steps": ["review-step-ignore"]
    }
  },

  "review-step-random": {
    "path": "./src/services/review/step-random",
    "#plugin:review": {
      "steps": ["review-step-random"],
      "stepsOptions": {
        "random": { "max": 5 }
      }
    }
  },

  "review-step-load": {
    "path": "./src/services/review/step-load",
    "#plugin:review": {
      "steps": ["review-step-load"],
      "stepsOptions": {
        "load": { "max": 5 }
      }
    },
    "dependencies": [
      "model"
    ]
  },

  "review-step-commiters": {
    "path": "./src/services/review/step-commiters",
    "#plugin:review": {
      "steps": ["review-step-commiters"],
      "stepsOptions": {
        "commiters": {
          "max": 4,
          "since": [4, "month"],
          "filesToCheck": 5,
          "commitsCount": 10
        }
      }
    },
    "dependencies": [
      "logger",
      "github"
    ]
  },

  "review-step-total": {
    "path": "./src/services/review/step-total",
    "#plugin:review": {
      "steps": ["review-step-total"]
    }
  }

}
