{

  "review-step-preferred": {
    "path": "./src/services/review/step-preferred",
    "#plugin:review": {
      "steps": {
        "prefered": "review-step-preferred"
      }
    },
    "dependencies": [
      "logger",
      "team-manager"
    ]
  },

  "review-step-remove-author": {
    "path": "./src/services/review/step-remove-author",
    "#plugin:review": {
      "steps": {
        "remove-author": "review-step-remove-author"
      }
    }
  },

  "review-step-remove-reviewers": {
    "path": "./src/services/review/step-remove-reviewers",
    "#plugin:review": {
      "steps": {
        "remove-reviewers": "review-step-remove-reviewers"
      }
    }
  },

  "review-step-ignore": {
    "path": "./src/services/review/step-ignore",
    "#plugin:review": {
      "steps": {
        "ignore": "review-step-ignore"
      }
    }
  },

  "review-step-random": {
    "path": "./src/services/review/step-random",
    "#plugin:review": {
      "steps": {
        "random": "review-step-random"
      },
      "stepsOptions": {
        "random": { "max": 5 }
      }
    }
  },

  "review-step-load": {
    "path": "./src/services/review/step-load",
    "#plugin:review": {
      "steps": {
        "load": "review-step-load"
      },
      "stepsOptions": {
        "load": { "max": 5 }
      }
    },
    "dependencies": [
      "model"
    ]
  },

  "review-step-commiters": {
    "path": "./src/services/review/step-commiters",
    "#plugin:review": {
      "steps": {
        "commiters": "review-step-commiters"
      },
      "stepsOptions": {
        "commiters": {
          "max": 4,
          "since": [4, "month"],
          "filesToCheck": 5,
          "commitsCount": 10
        }
      }
    },
    "dependencies": [
      "logger",
      "github"
    ]
  },

  "review-step-project-config": {
    "path": "./src/services/review/step-project-config",
    "#plugin:review": {
      "steps": {
        "project-config": "review-step-project-config"
      }
    },
    "dependencies": [
      "logger",
      "github",
      "team-manager"
    ]
  },

  "review-step-total": {
    "path": "./src/services/review/step-total",
    "#plugin:review": {
      "steps": {
        "total": "review-step-total"
      }
    }
  }

}
