{

  "startup_timeout": 5000,

  "shutdown_timeout": 5000,

  "services": {

    "queue": {
      "path": "./src/services/queue"
    },

    "events": {
      "path": "./src/services/events"
    },

    "logger": {
      "path": "./src/services/logger",
      "options": {
        "formatters": {
          "default": {
            "format": "[%(date)s] %(name)s %(levelname)s: %(message)s",
            "datefmt": "%Y-%m-%dT%H:%M:%S.%L%z",
            "colorize": true
          }
        },
        "handlers": {
          "terminal": {
            "class": "intel/handlers/console",
            "level": "VERBOSE",
            "formatter": "default"
          }
        },
        "loggers": {
          "root": {
            "level": "INFO",
            "handlers": ["terminal"],
            "exitOnError": false,
            "handleExceptions": true
          }
        }
      }
    },

    "github": {
      "path": "./src/services/github",
      "options": {
        "host": "api.github.com",
        "debug": false,
        "version": "3.0.0",
        "timeout": 5000,
        "protocol": "https",
        "headers": {
          "user-agent": "DevExp/2.0.0"
        }
      }
    },

    "plugin-manager": {
      "path": "./src/services/plugin-manager"
    },

    "mongoose": {
      "path": "./src/services/mongoose",
      "options": {
        "host": "mongodb://localhost/devexp"
      },
      "dependencies": ["logger"]
    },

    "model": {
      "path": "./src/services/model",
      "options": {
        "models": {},
        "plugins": {}
      },
      "dependencies": [
        "mongoose",
        "plugin-manager"
      ]
    },

    "#include:model-class": "./default-model-class.json",

    "http": {
      "path": "./src/services/http",
      "options": {
        "port": 80,
        "routes": {},
        "middlewares": []
      },
      "dependencies": [
        "events",
        "logger",
        "plugin-manager"
      ]
    },

    "#include:http-routes": "./default-http-routes.json",

    "team-manager": {
      "path": "./src/services/team-manager",
      "options": {
        "drivers": {}
      },
      "dependencies": [
        "model",
        "plugin-manager"
      ]
    },

    "#include:team-drivers": "./default-team-drivers.json",

    "pull-request-github": {
      "path": "./src/services/pull-request-github/delayed",
      "dependencies": [
        "github"
      ]
    },

    "pull-request-review": {
      "path": "./src/services/pull-request-review",
      "dependencies": [
        "events",
        "logger"
      ]
    },

    "#comment:review": {
      "path": "./src/services/review",
      "options": {
        "approveCount": 2,
        "totalReviewers": 2,
        "steps": [
          "remove-author",
          "remove-already-reviewers",
          "ignore",
          "random",
          "prefered",
          "commiters",
          "load"
        ],
        "stepsOptions": {
          "commiters": {
            "max": 4,
            "since": [4, "month"],
            "filesToCheck": 5,
            "commitsCount": 10
          },
          "load": { "max": 5 },
          "random": { "max": 5 }
        }
      },
      "dependencies": [
        "logger",
        "team-manager",
        "review-step-commiters",
        "review-step-ignore",
        "review-step-random",
        "review-step-load",
        "review-step-remove-already-reviewers",
        "review-step-remove-author",
        "review-step-prefered"
      ]
    },

    "#comment:#include:review-steps": "./default-review-steps.json",

    "#comment:badges-review": {
      "path": "./src/services/badges/badges-review",
      "options": {
        "url": "http://localhost/badges/"
      },
      "dependencies": [
        "queue",
        "events",
        "logger",
        "pull-request-github"
      ]
    },

    "#comment:command": {
      "path": "./src/services/command",
      "options": {
        "events": ["github:issue_comment"]
      },
      "dependencies": [
        "queue",
        "events",
        "logger",
        "team-manager",
        "pull-request-model"
      ]
    },

    "#comment:#include:command": "./default-command.json",

    "#comment:#include:plugins": "./default-plugins.json",

    "#comment:__LASTLINE__": ""
  }

}
