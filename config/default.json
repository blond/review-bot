{

  "startup_timeout": 5000,

  "shutdown_timeout": 5000,

  "services": {

    "queue": {
      "path": "./src/services/queue"
    },

    "events": {
      "path": "./src/services/events"
    },

    "logger": {
      "path": "./src/services/logger",
      "options": {
        "formatters": {
          "default": {
            "format": "[%(date)s] %(name)s %(levelname)s: %(message)s",
            "datefmt": "%Y-%m-%dT%H:%M:%S.%L%z",
            "colorize": true
          }
        },
        "handlers": {
          "terminal": {
            "class": "intel/handlers/console",
            "level": "VERBOSE",
            "formatter": "default"
          }
        },
        "loggers": {
          "root": {
            "level": "INFO",
            "handlers": ["terminal"],
            "exitOnError": false,
            "handleExceptions": true
          }
        }
      }
    },

    "github": {
      "path": "./src/services/github",
      "options": {
        "host": "api.github.com",
        "debug": false,
        "timeout": 5000,
        "protocol": "https",
        "headers": {
          "user-agent": "DevExp/2.0.0"
        }
      }
    },

    "mongoose": {
      "path": "./src/services/mongoose",
      "options": {
        "host": "mongodb://localhost/devexp"
      },
      "dependencies": ["logger"]
    },

    "model": {
      "path": "./src/services/model",
      "options": {
        "models": {},
        "plugins": {}
      },
      "dependencies": [
        "mongoose"
      ]
    },

    "#include:model-class": "./default-model-class.json",

    "http": {
      "path": "./src/services/http",
      "options": {
        "port": 80,
        "routes": {},
        "middlewares": []
      },
      "dependencies": [
        "events",
        "logger"
      ]
    },

    "#include:http-routes": "./default-http-routes.json",

    "team-search": {
      "path": "./src/services/team-search"
    },

    "team-manager": {
      "path": "./src/services/team-manager",
      "options": {
        "drivers": {}
      },
      "dependencies": [
        "model",
        "team-search"
      ]
    },

    "team-sync": {
      "path": "./src/services/team-sync",
      "dependencies": [
        "model",
        "team-search",
        "team-manager"
      ]
    },

    "#include:team-drivers": "./default-team-drivers.json",

    "pull-request-github": {
      "path": "./src/services/pull-request-github/delayed",
      "dependencies": [
        "github"
      ]
    },

    "pull-request-status": {
      "path": "./src/services/pull-request-status",
      "dependencies": [
        "events",
        "logger",
        "team-manager",
        "pull-request-github"
      ]
    },

    "pull-request-review": {
      "path": "./src/services/pull-request-review",
      "dependencies": [
        "events",
        "logger"
      ]
    },

    "review": {
      "path": "./src/services/review",
      "options": {
        "steps": {},
        "stepsOptions": {},
        "approveCount": 2,
        "defaultSteps": [
          "preferred",
          "remove-author",
          "remove-reviewers",
          "load",
          "random",
          "commiters",
          "total"
        ]
      },
      "dependencies": [
        "logger",
        "team-manager"
      ]
    },

    "#include:review-steps": "./default-review-steps.json",

    "command": {
      "path": "./src/services/command",
      "options": {
        "events": ["github:issue_comment"]
      },
      "dependencies": [
        "model",
        "queue",
        "events",
        "logger",
        "team-manager"
      ]
    },

    "notification": {
      "path": "./src/services/notification",
      "options": {
        "transports": {}
      },
      "dependencies": [
        "team-manager"
      ]
    },

    "#include:notification": "./default-notification.json",

    "#include:command": "./default-command.json",

    "#include:plugins": "./default-plugins.json",

    "#comment:__LASTLINE__": ""
  }

}
